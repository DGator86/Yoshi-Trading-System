[Unit]
Description=Yoshi Bridge (Scanner -> Trading Core)
After=kalshi-scanner.service

[Service]
User=root
WorkingDirectory=/root/Yoshi-Trading-System
ExecStart=/usr/bin/python3 clawdbot/scripts/yoshi-bridge.py --signal-path data/signals/scanner_signals.jsonl --poll-interval 2 --min-edge 2.0
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
Environment="PYTHONPATH=/root/Yoshi-Trading-System"

[Install]
WantedBy=multi-user.target
